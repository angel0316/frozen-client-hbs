{{#if (eq consultation.status 'NURSING')}}
<div id="main-tab" class="tab-pane active" role="tabpanel" aria-labelledby="nursing-tab">
  <div class="post intro-y grid grid-cols-12 gap-5 mt-5">
    <!-- BEGIN: Post Content -->
    <div class="intro-y col-span-12">
        <!-- BEGIN: Input -->
        <form class="intro-y box" action="/consultations/{{consultation.id}}/signes_vitaux?_method=PUT" method="POST" enctype="application/x-www-form-urlencoded">
            <div class="flex flex-col sm:flex-row items-center p-5 border-b border-gray-200 dark:border-dark-5">
                <h2 class="font-medium text-base mr-auto">
                    Signes Vitaux
                </h2>
            </div>
            <div id="input" class="p-5">
                <div class="preview">
                    <div>
                        <label for="poids" class="form-label">Poids</label>
                        <input id="poids" name="poids" type="number" step="0.01" class="form-control" placeholder="0.0" required>
                        <div class="form-help">Introduisez simplement le chifre ex: 70</div>

                    </div>
                    <div class="mt-3">
                        <label for="symptomes" class="form-label">Symptomes</label>
                        <textarea id="symptomes" name="symptomes" type="text" class="form-control form-control-rounded" placeholder="Symptômes"></textarea>
                    </div>
                    <div class="mt-3">
                        <label for="tension" class="form-label">Tension</label>
                        <input id="tension" name="tension" type="text" class="form-control" placeholder="0/0" required>
                        <div class="form-help">Introduisez la tension au format diastolique/systolique ex: 11/9</div>
                    </div>
                    <div class="mt-3">
                        <label for="temperature" class="form-label">Température</label>
                        <input id="temperature" name="temperature" type="number" class="form-control" placeholder="0" required>
                        <div class="form-help">Introduisez simplement le chifre ex: 36</div>
                    </div>
                    <div class="mt-3">
                        <label for="imc" class="form-label">IMC</label>
                        <input id="imc" type="text" class="form-control" placeholder="IMC">
                    </div>
                </div>

                <button class="btn btn-primary w-24 mr-1 mb-2 mt-3" type="submit">Envoyer</button>
            </div>
        </form>
        <!-- END: Input -->
    </div>
    <!-- END: Announcement -->
  </div>
</div>
{{/if}}
